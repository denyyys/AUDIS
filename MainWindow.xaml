<Window x:Class="AudisService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audis - Kybl Enterprise" Height="600" Width="800"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Status Area -->
            <RowDefinition Height="*"/>    <!-- Tabs -->
        </Grid.RowDefinitions>

        <!-- Top Control Bar -->
        <Border BorderThickness="0,0,0,1" BorderBrush="Gray" Margin="0,0,0,10" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Service Status:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="StatusTxt" Text="STOPPED" FontWeight="Bold" Foreground="Red" VerticalAlignment="Center" Width="80"/>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                
                <Button x:Name="BtnStart" Content=" Start Service " Click="BtnStart_Click" Margin="2,0"/>
                <Button x:Name="BtnStop" Content=" Stop Service " Click="BtnStop_Click" Margin="2,0" IsEnabled="False"/>

                <!-- NEW: RAM Usage Monitor -->
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                <TextBlock Text="RAM:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Gray"/>
                <TextBlock x:Name="TxtRam" Text="0 MB" FontWeight="Bold" VerticalAlignment="Center" Foreground="Blue"/>
            </StackPanel>
        </Border>

        <!-- Main Tabs -->
        <TabControl Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
            
            <!-- TAB 1: DASHBOARD -->
            <TabItem Header="Dashboard">
                <Grid Margin="5">
                    <GroupBox Header="Active Connections">
                        <DataGrid x:Name="CallsGrid" AutoGenerateColumns="False" 
                                  GridLinesVisibility="All" HeadersVisibility="Column" 
                                  IsReadOnly="True" Background="White" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" Width="250"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                                <DataGridTextColumn Header="Input" Binding="{Binding LastInput}" Width="80"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding DurationStr}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- TAB 2: SWITCHBOARD -->
            <TabItem Header="Switchboard (Audio)">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Map DTMF Keys to Filenames. Use 'INFO_PACKAGE' for dynamic weather/time." Margin="0,0,0,5" Foreground="Gray"/>
                    
                    <DataGrid x:Name="MappingGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="DTMF Key" Binding="{Binding Key}" IsReadOnly="True" Width="80"/>
                            <DataGridTextColumn Header="Filename / Action" Binding="{Binding Value}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 3: CONFIGURATION -->
            <TabItem Header="Configuration">
                <StackPanel Margin="10">
                    <GroupBox Header="Network Settings">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Content="Public IP:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="TxtPubIp" Text="192.168.100.64" Grid.Row="0" Grid.Column="1" Margin="2"/>
                            
                            <Label Content="SIP Port:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="TxtPort" Text="5060" Grid.Row="1" Grid.Column="1" Margin="2"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Weather Location" Margin="0,10,0,0">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="City Name:" Grid.Row="0"/>
                            <TextBox x:Name="TxtCity" Text="Karviná" Grid.Row="0" Grid.Column="1" Margin="2"/>

                            <Label Content="Latitude:" Grid.Row="1"/>
                            <TextBox x:Name="TxtLat" Text="49.85" Grid.Row="1" Grid.Column="1" Margin="2"/>

                            <Label Content="Longitude:" Grid.Row="2"/>
                            <TextBox x:Name="TxtLon" Text="18.54" Grid.Row="2" Grid.Column="1" Margin="2"/>
                        </Grid>
                    </GroupBox>
                    <Button Content="Apply Configuration" HorizontalAlignment="Left" Width="150" Margin="0,10" Height="25" Click="BtnApplyConfig_Click"/>
                </StackPanel>
            </TabItem>

            <!-- TAB 4: TRAFFIC INSPECTOR -->
            <TabItem Header="Traffic Inspector">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="TxtSniffer" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                             FontFamily="Courier New" FontSize="11" Background="#FFF" BorderThickness="0"/>
                    <Button Grid.Row="1" Content="Clear Logs" Click="BtnClearSniff_Click"/>
                </Grid>
            </TabItem>

            <!-- TAB 5: SYSTEM LOGS -->
            <TabItem Header="System Logs">
                <ListBox x:Name="LogList" FontFamily="Courier New" FontSize="11" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullMessage}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <!-- TAB 6: ABOUT -->
            <TabItem Header="About">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="AUDIS" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Enterprise SIP Manager" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Version: 1.1" HorizontalAlignment="Center"/>
                    <TextBlock Text="Copyright © 2026 Kybl Enterprise" HorizontalAlignment="Center"/>
                    <TextBlock Text="All Rights Reserved." HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Warning: This computer program is protected by copyright law." 
                               FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>